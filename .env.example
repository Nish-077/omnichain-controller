# LayerZero OApp Environment Variables
# Copy this file to .env and fill in your values

# ==================================
# RPC ENDPOINTS
# ==================================

# Ethereum Sepolia Testnet RPC
ETHEREUM_SEPOLIA_RPC=https://rpc.sepolia.org

# Ethereum Mainnet RPC (use your preferred provider)
ETHEREUM_MAINNET_RPC=https://eth.llamarpc.com

# Solana Testnet RPC
SOLANA_TESTNET_RPC=https://api.testnet.solana.com

# Solana Mainnet RPC
SOLANA_MAINNET_RPC=https://api.mainnet-beta.solana.com

# ==================================
# PRIVATE KEYS & ACCOUNTS
# ==================================

# Private key for deployment (without 0x prefix)
# NEVER commit this to version control!
PRIVATE_KEY=your_private_key_here

# Solana wallet private key (base58 encoded)
SOLANA_PRIVATE_KEY=your_solana_private_key_here

# ==================================
# API KEYS
# ==================================

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# CoinMarketCap API key for gas reporting
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# ==================================
# LAYERZERO CONFIGURATION
# ==================================

# LayerZero Endpoint IDs (these are standard, don't change)
ETHEREUM_SEPOLIA_EID=40161
ETHEREUM_MAINNET_EID=30101
SOLANA_TESTNET_EID=40168
SOLANA_MAINNET_EID=30168

# LayerZero DVN addresses (for custom configurations)
LAYERZERO_LABS_DVN_ETHEREUM=0x589dEDbD617e0CBcB916A9223F4d1300c294236b
LAYERZERO_LABS_DVN_SOLANA=DVNhZXMudvw3Y8j8kGpLCUQQWfJPCCQhCvtGx4FmHrF

# ==================================
# DEPLOYMENT CONFIGURATION
# ==================================

# Environment (testnet or mainnet)
ENVIRONMENT=testnet

# Contract owner address
OWNER_ADDRESS=your_owner_address_here

# DAO admin address (for governance)
DAO_ADMIN_ADDRESS=your_dao_admin_address_here

# ==================================
# OPTIONAL: CUSTOM CONFIGURATIONS
# ==================================

# Custom gas prices (in gwei for Ethereum)
ETH_GAS_PRICE=20

# Custom gas multiplier
GAS_MULTIPLIER=1.2

# Enable debug logging
DEBUG=true

# Report gas usage
REPORT_GAS=true

# ==================================
# SECURITY NOTES
# ==================================

# 1. Never commit the .env file to version control
# 2. Use environment-specific .env files (.env.testnet, .env.mainnet)
# 3. Store production private keys in secure key management systems
# 4. Rotate private keys regularly
# 5. Use hardware wallets for mainnet deployments when possible
