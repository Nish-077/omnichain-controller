{
  "name": "omnichain-controller",
  "version": "1.0.0",
  "description": "LayerZero V2 OApp for cross-chain DAO and NFT management",
  "license": "ISC",
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "build": "tsc",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy:testnet": "npx hardhat lz:deploy",
    "deploy:mainnet": "npx hardhat lz:deploy --network mainnet",
    "wire:testnet": "npx hardhat lz:oapp:wire --oapp-config layerzero.config.ts",
    "wire:mainnet": "npx hardhat lz:oapp:wire --oapp-config layerzero.config.ts --network mainnet",
    "send:testnet": "npx hardhat lz:oapp:send --network ethereum-sepolia",
    "verify:config": "npx hardhat lz:oapp:config:get --oapp-config layerzero.config.ts",
    "deploy:evm": "ts-node scripts/deployment/deploy-evm.ts",
    "deploy:solana": "ts-node scripts/deployment/deploy-solana.ts",
    "wire:peers": "ts-node scripts/deployment/wire-peers.ts",
    "deploy:full": "npm run deploy:evm && npm run deploy:solana && npm run wire:peers",
    "test:cross-chain": "ts-node scripts/testing/test-cross-chain.ts",
    "anchor:build": "anchor build",
    "anchor:deploy": "anchor deploy",
    "anchor:test": "anchor test",
    "solana:test": "anchor test --skip-local-validator"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@layerzerolabs/lz-definitions": "^2.3.3",
    "@layerzerolabs/lz-evm-messagelib-v2": "^3.0.109",
    "@layerzerolabs/lz-evm-oapp-v2": "^2.3.3",
    "@layerzerolabs/lz-evm-protocol-v2": "^2.3.3",
    "@layerzerolabs/lz-v2-utilities": "^2.3.3",
    "@layerzerolabs/toolbox-hardhat": "^0.3.2",
    "@metaplex-foundation/mpl-bubblegum": "^5.0.1",
    "@metaplex-foundation/mpl-token-metadata": "^3.4.0",
    "@metaplex-foundation/umi": "^1.2.0",
    "@metaplex-foundation/umi-bundle-defaults": "^1.2.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@openzeppelin/contracts": "^4.9.6",
    "@solana-program/token": "^0.5.1",
    "@solana/spl-account-compression": "^0.4.1",
    "@solana/spl-token": "^0.4.13",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "hardhat": "^2.19.4",
    "hardhat-deploy": "^0.12.1",
    "solidity-bytes-utils": "^0.8.4"
  },
  "devDependencies": {
    "@layerzerolabs/test-devtools": "^0.2.4",
    "@layerzerolabs/test-devtools-evm-hardhat": "^0.2.4",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "chai": "^4.3.4",
    "eslint": "^8.56.0",
    "hardhat-deploy": "^0.12.1",
    "mocha": "^9.0.3",
    "prettier": "^2.6.2",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/omnichain-controller.git"
  },
  "keywords": [
    "layerzero",
    "oapp",
    "cross-chain",
    "dao",
    "nft",
    "solana",
    "ethereum"
  ]
}
